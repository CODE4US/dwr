<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dwr PUBLIC "-//GetAhead Limited//DTD Direct Web Remoting 2.0//EN" "http://getahead.ltd.uk/dwr/dwr20.dtd">

<dwr>

  <allow>

    <!-- stress -->
    <create creator="new" javascript="Settings" scope="application">
      <param name="class" value="org.directwebremoting.export.stress.Settings"/>
    </create>
    <create creator="new" javascript="Stress" scope="script">
      <param name="class" value="org.directwebremoting.export.stress.Stress"/>
    </create>
    <convert match="org.directwebremoting.export.stress.Setting" converter="bean"/>

    <!-- chat -->
    <create creator="new" javascript="Control" scope="application">
      <param name="class" value="org.directwebremoting.export.arac.Control"/>
    </create>
    <convert converter="bean" match="org.directwebremoting.export.arac.Client">
      <param name="exclude" value="session"/>
    </convert>

    <!-- test -->
    <create creator="new" javascript="Test" scope="application">
      <param name="class" value="org.directwebremoting.export.marshall.Test"/>
    </create>
    <convert converter="bean" match="$Proxy*"/>
    <convert converter="bean" match="org.directwebremoting.export.marshall.TestBean"/>
    <convert converter="bean" javascript="ObjB" match="org.directwebremoting.export.marshall.ObjB"/>
    <convert converter="object" javascript="ObjA" match="org.directwebremoting.export.marshall.ObjA">
      <param name="force" value="true"/>
    </convert>

    <convert converter="exception" match="java.lang.NullPointerException"/>
    <convert converter="exception" match="org.xml.sax.SAXParseException"/>
    <convert converter="bean" match="java.lang.StackTraceElement"/>

  </allow>

  <signatures>
  <![CDATA[
  import java.util.*;
  import org.directwebremoting.export.marshall.*;

  Test.testBeanSetParam(Set<TestBean>);
  Test.testBeanListParam(List<TestBean>);
  Test.charTestBeanMapParam(Map<Character, TestBean>);

  Test.stringStringMapParam(Map<String, String>);
  Test.stringStringHashMapParam(HashMap<String, String>);
  Test.stringStringTreeMapParam(TreeMap<String, String>);

  Test.stringCollectionParam(Collection<String>);

  Test.stringListParam(List<String>);
  Test.stringLinkedListParam(LinkedList<String>);
  Test.stringArrayListParam(ArrayList<String>);

  Test.stringSetParam(Set<String>);
  Test.stringHashSetParam(HashSet<String>);
  Test.stringTreeSetParam(TreeSet<String>);
  ]]>
  </signatures>

</dwr>
